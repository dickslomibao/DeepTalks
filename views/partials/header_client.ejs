<body>
    <div class="container-fluid">
        <div class="row" style="height:100vh">
            <div class="col-lg-2 nav-bar-side">
                <div class="logo">
                    <center>
                        <img src="/img/logo/logo.png" style="height: 100px;" alt="" srcset="">
                    </center>
                    <!-- <h5>DeepTalks</h5> -->
                </div>
                <ul>
                    <li><a style="color: black;" href="/">Home</a></li>
                    <li><a style="color: black;" href="/threads/mythreads">My threads</a></li>
                </ul>

                <div class="label-channel d-flex align-items-center justify-content-between">
                    <p>Your channel</p>
                    <i class="fal fa-plus-circle" style="cursor: pointer;"
                        onClick="location.href='/channel/create'"></i>
                </div>
                <div class="channel-container">

                    <% channels.forEach(element=> { %>
                        <div class="channel-card d-flex align-items-center"
                            onClick="location.href='/channel/<%= element.id %>/view'" ;
                            style="gap: 10px;margin-bottom: 15px;cursor:pointer">
                            <img src="<%= element.thumbnail %>" alt="">
                            <h6>
                                <%= element.name %>
                            </h6>

                        </div>
                        <% }) %>
                </div>
            </div>
            <div class="modal fade" id="updateProfileModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content" style="background-color: var(--mainBG); color: white;padding:15px">

                        <div class="modal-body" style="background-color: var(--mainBG);">
                            <center>
                                <img src="<%= user.profile %>" alt=""
                                    style="width:150px;height:150px;object-fit: cover;border-radius: 50%;margin:0 0 20px 0">
                            </center>
                            <!-- Form for updating profile picture -->
                            <form action="/updateClientProfile" method="post" enctype="multipart/form-data"
                                class="needs-validation" novalidate>
                                <div class="mb-3">

                                    <input type="file" class="form-control" id="newProfilePic" name="newProfilePic"
                                        accept="image/*"
                                        style="color: var(--textColor);margin-bottom: 10px; background-color: var(--mainBG);">

                                </div>
                                <center>
                                    <button type="submit" class="btn btn-primary w-100"
                                        style="background-color:#4154f1;color:white;">Update Profile
                                        Picture</button>
                                </center>
                            </form><br>
                            <form method="POST" action="/updateClientInfo">
                                <div class="mb-3">
                                    <label for="name" class="form-label">Full Name:</label>
                                    <input type="text" class="form-control" id="newFullName" name="newFullName"
                                        style="background-color: var(--mainBG);color:white" value="<%= user.name %>">
                                </div>
                                <div class="mb-3">
                                    <label for="description" class="form-label">Username:</label>
                                    <input type="text" class="form-control" id="newUsername" name="newUsername"
                                        value="<%= user.username %>"
                                        style="background-color: var(--mainBG);color:white">
                                </div>
                                <div class="mb-3">
                                    <label for="image" class="form-label">Email:</label>
                                    <input type="text" class="form-control" id="newEmail" name="newEmail"
                                        value="<%= user.email %>" style="background-color: var(--mainBG);color:white">
                                </div>
                                <center>
                                    <button type="submit" class="btn btn-primary w-100"
                                        style="background-color:#4154f1;color:white;">Update Profile
                                        Information</button>
                                </center>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/img/logo_new.png" type="image/gif" sizes="16x16">

    <title>Admin - Profile</title>

    <!-- Custom fonts for this template -->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Custom styles for this page -->
    <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('../partials/adminav.ejs'); -%>

            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="container mt-4">
                    <div class="card" align="left">
                        <div class="card-header">
                            <h6 class="m-0 font-weight-bold" style="color: black;">Profile Information</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <% if (adminUser) { %>
                                                <img src="<%= adminUser.profile %>" alt=""
                                                    style="width:150px;height:150px;object-fit: cover;border-radius: 50%;"><br>
                                                <button type="button" class="btn btn  mx-auto btn-sm mt-2 mb-3"
                                                    style="background-color:#4154f1;color:white" data-toggle="modal"
                                                    data-target="#updateProfileModal">
                                                    Update Profile Picture
                                                </button><br>


                                                <strong style="color: black">Full Name:</strong> <span
                                                    style="color: black">
                                                    <%= adminUser.name %>
                                                </span><br>
                                                <strong style="color: black">Username:</strong> <span
                                                    style="color: black">
                                                    <%= adminUser.username %>
                                                </span><br>
                                                <strong style="color: black">Email:</strong> <span style="color: black">
                                                    <%= adminUser.email %>
                                                </span><br>

                                                <button type="button" class="btn btn  mx-auto btn-sm mt-2"
                                                    style="background-color:#4154f1;color:white" data-toggle="modal"
                                                    data-target="#updateInfoModal">
                                                    Update Profile Information
                                                </button>

                                                <div class="modal fade" id="updateInfoModal" tabindex="-1" role="dialog"
                                                    aria-labelledby="updateProfileModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h6 class="modal-title" id="updateProfileModalLabel"
                                                                    style="color:#1e1e1e">Update Profile</h6>
                                                                <button type="button" class="close" data-dismiss="modal"
                                                                    aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body"
                                                                style="background-color:white;color:black">
                                                                <form action="/admin/profile/updateInfo" method="post"
                                                                    class="needs-validation" novalidate>
                                                                    <div class="form-group">
                                                                        <label for="newFullName">Full Name:</label>
                                                                        <input type="text" class="form-control"
                                                                            id="newFullName" name="newFullName" required
                                                                            value="<%= adminUser.name %>">
                                                                        <div class="invalid-feedback">
                                                                            Please enter your full name.
                                                                        </div>
                                                                    </div>



                                                                    <center>
                                                                        <button type="submit"
                                                                            class="btn btn d-grid gap-2 col-6  w-100"
                                                                            style="width: 100%;background-color:#4154f1;color:white">Update</button>
                                                                    </center>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal fade" id="updateProfileModal" tabindex="-1"
                                                    role="dialog" aria-labelledby="updateProfileModalLabel"
                                                    aria-hidden="true">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h6 class="modal-title" id="updateProfileModalLabel"
                                                                    style="color:#1e1e1e">Update Profile Picture</h6>
                                                                <button type="button" class="close" data-dismiss="modal"
                                                                    aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body"
                                                                style="background-color:white ;color:black">
                                                                <form action="/admin/profile/updateProfile"
                                                                    method="post" enctype="multipart/form-data"
                                                                    class="needs-validation" novalidate>
                                                                    <div class="form-group">
                                                                        <label for="newProfilePic">New Profile
                                                                            Picture:</label>
                                                                        <input type="file" class="form-control-file"
                                                                            id="newProfilePic" name="newProfilePic"
                                                                            accept="image/*">
                                                                    </div>
                                                                    <center>
                                                                        <button type="submit"
                                                                            class="btn btn d-grid gap-2 col-6 mx-auto w-100"
                                                                            style="width: 100%;background-color:#4154f1;color:white">Update</button>
                                                                    </center>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <%- include('../partials/admin_footer.ejs'); -%>

        </div>
        <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <%- include('../partials/admin_signout.ejs'); -%>


            <!-- Bootstrap core JavaScript-->
            <script src="/vendor/jquery/jquery.min.js"></script>
            <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

            <!-- Core plugin JavaScript-->
            <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

            <!-- Custom scripts for all pages-->
            <script src="/js/sb-admin-2.min.js"></script>

            <!-- Page level plugins -->
            <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
            <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

            <!-- Page level custom scripts -->
            <script src="/js/demo/datatables-demo.js"></script>

</body>

</html>